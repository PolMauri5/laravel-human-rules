{
    "name": "polmauri/human-rules",
    "description": "Translate Laravel validation rules into human-readable sentences.",
    "keywords": [
        "laravel",
        "validation",
        "rules",
        "human-readable",
        "laravel-package",
        "translations"
    ],
    "homepage": "https://github.com/PolMauri5/laravel-human-rules",
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Mauri",
            "email": "polmauri5@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "orchestra/testbench": "^9.0",
        "laravel/pint": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "HumanReadable\\HumanRules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HumanReadable\\HumanRules\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HumanReadable\\HumanRules\\HumanRulesServiceProvider"
            ]
        }
    },
    "prefer-stable": true,
    "minimum-stability": "stable"
}
